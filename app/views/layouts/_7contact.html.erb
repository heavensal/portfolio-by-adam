<section id="contact" class="py-5">
  <div class="container">
    <h2 class="text-center mb-4">Contactez-moi</h2>

    <!-- Formulaire de contact -->
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <form class="contact-form">
          <div class="mb-3">
            <label for="name" class="form-label">Nom</label>
            <input type="text" id="name" class="form-control" placeholder="Votre nom" required>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" id="email" class="form-control" placeholder="exemple@email.com" required>
          </div>

          <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea id="message" class="form-control" rows="4" placeholder="Votre message" required></textarea>
          </div>

          <button type="submit" class="btn btn-primary">Envoyer</button>
        </form>
      </div>
    </div>

    <!-- Liens de contact -->
    <div class="row mt-5">
      <div class="col-lg-8 mx-auto text-center">
        <p class="mb-3">Ou rejoignez-moi sur :</p>
        <a href="lien_vers_votre_cv.pdf" class="btn btn-outline-secondary mb-3" download>Télécharger mon CV</a>
        <div class="d-flex justify-content-center">
          <a href="lien_vers_votre_linkedin" class="mx-3"><i class="fab fa-linkedin"></i></a>
          <a href="mailto:votre_email@example.com" class="mx-3"><i class="fas fa-envelope"></i></a>
          <!-- Ajoutez d'autres icônes de réseaux sociaux si nécessaire -->
        </div>
      </div>
    </div>
  </div>
</section>
